.index {
  width: 100vw;
  padding-bottom: 60rpx;
  color: #333333;
}
.index .bannerContent {
  width: 100%;
  height: 320rpx;
}
.index .bannerContent .swiperImg {
  width: 100%;
  height: 100%;
}
.index .content {
  padding: 20rpx;
}
.index .content .bar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 36rpx 0;
  margin-top: -28rpx;
  position: relative;
  z-index: 1;
  background: #FFFFFF;
  box-shadow: 4rpx 4rpx 10rpx #CCCCCC;
}
.index .content .bar .iconSpan {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
}
.index .content .bar .iconSpan .iconBarImg {
  width: 44rpx;
  height: 44rpx;
}
.index .content .bar .iconSpan .listname {
  font-size: 32rpx;
}
.index .content .used {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 40rpx;
}
.index .content .used .usedImg {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
  box-shadow: 4rpx 4rpx 10rpx #CCCCCC;
}
.index .content .used .usedImg image {
  height: 100%;
  width: 100%;
}
.index .content .used .usedImg .icon {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  left: 50%;
  margin: -25rpx auto auto -25rpx;
  opacity: .8;
}
.index .content .used .usedImg .imgTitle {
  position: absolute;
  display: block;
  width: 100%;
  bottom: 20rpx;
  text-align: center;
  color: #F55500;
}
.index .content .used .list {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.index .content .used .list .info {
  position: relative;
  height: 100rpx;
  box-sizing: border-box;
  padding: 12rpx 20rpx;
}
.index .content .used .list .info:first-child {
  margin-bottom: 20rpx;
}
.index .content .used .list .info .name {
  font-size: 32rpx;
}
.index .content .used .list .info .disc {
  font-size: 26rpx;
  color: #6f6f6f;
}
.index .content .used .list .info .listImg {
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 100rpx;
}

